{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "integer"
            },
            "title": {
                "type": "string"
            },
            "price": {
                "type": "number",
                "minimum": 0
            },
            "description": {
                "type": "string"
            },
            "category": {
                "type": "string"
            },
            "image": {
                "type": "string",
                "format": "uri"
            }
        },
        "required": ["id", "title", "price"]
    }
}